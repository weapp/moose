= form_for [@user, @post], html: { multipart: true } do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :text
    %br
    = f.text_area :text, id: "code", class: "code"
  
    %p
      = f.label :attachment
      %br
      = f.file_field :attachment

    - if current_user.admin?
      %p
        = f.label :user_id, "User"
        %br
        = f.select(:user_id, User.all.collect{|u| [u.username, u.id]}, :prompt => true)

    %p
      Tags
      %br
      - Tag.all.each do |tag|
        = check_box_tag "post[tag_ids][]", tag.id, @post.tags.include?(tag) #, :name => 'post[tag_ids][]'
        = label :tag_ids, tag.tag
        %br


  .actions
    = f.submit

:javascript
  var editor = CodeMirror.fromTextArea(document.getElementById("code"), {
    lineNumbers: true,
    lineWrapping: true,
    mode: "markdown"
  });

:css
  .CodeMirror {
    border: 1px solid #eee;
    height: auto;
  }
  .CodeMirror-scroll {
    overflow-y: hidden;
    overflow-x: auto;
  }
